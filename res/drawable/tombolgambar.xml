<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<item android:state_pressed="true">
		<shape>
			<gradient
				android:startColor="#c60000"
				android:endColor="#df0000"
				android:angle="270"
			/>
			<stroke
				android:width="1dip"
				android:color="#777777"
			/>
			<corners
				android:radius="5dip"
			/>
			<padding
				android:left="10dip"
				android:right="10dip"
				android:top="5dip"
				android:bottom="5dip"
			/>
		</shape>
	</item>	
	
	<item android:state_focused="true">
		<shape>
			<gradient
				android:startColor="#c60000"
				android:endColor="#df0000"
				android:angle="270"
			/>
			<stroke
				android:width="1dip"
				android:color="#777777"
			/>
			<corners
				android:radius="5dip"
			/>
			<padding
				android:left="10dip"
				android:right="10dip"
				android:top="5dip"
				android:bottom="5dip"
			/>
		</shape>
	</item>	
	
	<item>
		<shape>
			<gradient
				android:startColor="#c60000"
				android:endColor="#df0000"
				android:angle="270"
			/>
			<stroke
				android:width="1dip"
				android:color="#555555"
			/>
			<corners
				android:radius="5dip"
			/>
			<padding
				android:left="10dip"
				android:right="10dip"
				android:top="5dip"
				android:bottom="5dip"
			/>
		</shape>
	</item>	
</selector>
